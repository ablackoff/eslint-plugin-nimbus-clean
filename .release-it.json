{
  "plugins": {
    "@release-it/conventional-changelog": {
      "header": "# Changelog",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "cleanup",
            "section": "Cleanup"
          },
          {
            "type": "docs",
            "section": "Documentations"
          },
          {
            "type": "style",
            "section": "Style"
          },
          {
            "type": "perf",
            "section": "Performance"
          },
          {
            "type": "test",
            "section": "Tests"
          },
          {
            "type": "ci",
            "section": "CI/CD"
          },
          {
            "type": "build:",
            "section": "Build"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "in": "package.json",
      "out": ["package.json", "dist/package.json"]
    }
  },
  "git": {
    "requireBranch": "release",
    "tagName": "v${version}",
    "commitMessage": "chore: release ${version}",
    "requireCleanWorkingDir": false
  },
  "npm": false,
  "github": {
    "release": true,
    "assets": ["dist/*.tgz"]
  },
  "hooks": {
    "before:bump": "npm run build",
    "after:bump": "npm run release:prepare-toc-in-readme && npm run pack && git add .",
    "after:release": "npm publish"
  }
}
